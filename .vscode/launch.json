{
    "version": "0.1.0",
    "configurations": [
        {
            "name": "Run App",
            "type": "node",
            "request": "launch",
            "runtimeExecutable": "${workspaceFolder}/node_modules/nodemon/bin/nodemon.js",
            "runtimeArgs": [
                "--nolazy",
                "-r",
                "tsconfig-paths/register",
                "-r",
                "ts-node/register"
            ],
            "args": ["src/main.ts"],
            "cwd": "${workspaceRoot}",
            "internalConsoleOptions": "openOnSessionStart",
            "skipFiles": ["<node_internals>/**", "node_modules/**"]
        }
    ]
}
